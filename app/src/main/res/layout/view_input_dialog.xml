<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:padding="8dp"
            android:text="Hello"
            android:textAlignment="center"
            android:textColor="@color/text_header_2"
            android:textSize="@dimen/text_size_med" />

        <androidx.cardview.widget.CardView
            style="@style/CardViewBase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_almost"
                android:hint="@string/default_input_hint"
                android:inputType="textImeMultiLine"
                android:lines="2"
                android:padding="8dp"
                android:textColor="@color/text_header_1"
                android:textColorHint="@color/text_header_2" />
        </androidx.cardview.widget.CardView>


        <requestFocus />

    </LinearLayout>
</layout>
