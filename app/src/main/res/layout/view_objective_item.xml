<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="julienbirabent.apollomusic.data.local.model.ObjectiveBundle" />

        <import type="julienbirabent.apollomusic.data.local.entities.ObjectiveEntity" />

        <import type="julienbirabent.apollomusic.data.local.entities.ExerciseEntity" />

        <import type="julienbirabent.apollomusic.data.local.entities.CriteriaEntity" />


        <variable
            name="item"
            type="julienbirabent.apollomusic.data.local.model.ObjectiveBundle" />

        <variable
            name="callback"
            type="julienbirabent.apollomusic.ui.adapters.ActionItem&lt;ObjectiveBundle&gt;" />

    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/OutlinedCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:padding="4dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_purpleish"
            android:padding="4dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/objective_header"
                style="@style/TextView.ListItem"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{item.obj.objective}"
                app:layout_constraintEnd_toStartOf="@+id/delete_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/expand_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:clickable="false"
                android:focusable="false"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tint="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/delete_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="4dp"
                android:background="@android:color/transparent"
                android:foreground="?selectableItemBackgroundBorderless"
                android:onClick="@{ () -> callback.deleteItem(item)}"
                android:padding="4dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_garbage"
                android:tint="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="@id/expand_button"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/objective_details_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/objective_header">

                <include
                    android:id="@+id/view_exercise_short_info"
                    layout="@layout/view_exercise_short_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    bind:item="@{item.ex}" />

                <julienbirabent.apollomusic.view.EditTextWithSuffix
                    android:id="@+id/practice_time_target"
                    style="@style/TextView.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="@{String.format(@string/practice_time,item.obj.targetPracticeTime)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_exercise_short_info"
                    app:suffix="@string/minute" />

                <julienbirabent.apollomusic.view.EditTextWithSuffix
                    android:id="@+id/tempo_target"
                    style="@style/TextView.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="@{String.format(@string/tempo,item.obj.tempoBase)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/practice_time_target"
                    app:suffix="@string/bpm" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/criteria_description"
                    style="@style/TextView.Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="8dp"
                    android:text="@{String.format(@string/criteria,item.crit.criteria)}"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tempo_target" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>