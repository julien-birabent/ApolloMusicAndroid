<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme.Blue</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">@color/text_header_1</item>
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:scrollbarThumbHorizontal">@color/white_purpleish</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
        <!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
        <!-- <item name="colorPrimaryDark">@android:color/white</item> -->
    </style>

    <style name="AlertDialogTheme.Blue" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_card_dark</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:colorAccent">#FFFFFF</item>
    </style>

    <style name="AlertDialogTheme.White" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_card_white</item>
        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:textColor">@color/text_header_2</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat.Body2">

    </style>

    <style name="TextView">
        <item name="android:textColor">@color/text_header_1</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@color/text_header_1</item>
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="TextView.Subtitle">
        <item name="android:textColor">@color/text_header_2</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextView.ListItem">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="TextView.PageHeader" parent="TextView.Title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="ToolBarStyle" parent="@style/ThemeOverlay.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TextInputLayoutOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/text_header_2</item>
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="CheckBoxBase" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:colorControlNormal">#ffd600</item>
        <item name="android:colorControlActivated">#0091ea</item>
        <item name="android:colorControlHighlight">#c51162</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fabSize">normal</item>
        <item name="android:tint">@android:color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:src">@android:drawable/ic_input_add</item>
    </style>

    <style name="ColoredButtonBase" parent="Widget.AppCompat.Button.Colored">
        <item name="android:textAllCaps">false</item>
        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_header_2</item>
        <item name="android:foreground">?selectableItemBackgroundBorderless</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <style name="ColoredButtonBase.FlatGreen">
        <item name="android:background">@drawable/bg_green_flat_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:drawableTint">@color/white_almost</item>
    </style>

    <style name="ColoredButtonBase.FlatBlue">
        <item name="android:background">@drawable/bg_blue_flat_button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:drawableTint">@color/white_almost</item>
    </style>

    <style name="BaseLoginButton">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:elevation">0dp</item>
        <item name="android:padding">@dimen/login_button_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_med</item>
    </style>

    <style name="FacebookLoginButton" parent="BaseLoginButton">
        <item name="android:background">@drawable/bg_facebook_login_button</item>
        <item name="android:drawableLeft">@drawable/ic_facebook_circular_logo</item>
        <item name="android:text">@string/login_with_facebook</item>
    </style>

    <style name="GoogleLoginButton" parent="BaseLoginButton">
        <item name="android:background">@drawable/bg_google_login_button</item>
        <item name="android:drawableLeft">@drawable/ic_google_logo</item>
        <item name="android:text">@string/login_with_google</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.MyApp">
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="CardViewBase" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/white_almost</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:padding">8dp</item>
        <item name="cardElevation">1dp</item>
    </style>

    <style name="CardViewBase.Button">
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="OutlinedCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white_almost</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:padding">8dp</item>
        <item name="cardElevation">1dp</item>
        <item name="android:strokeColor">@color/colorAccentDark</item>
        <item name="android:strokeAlpha">0.5</item>
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="Widget.MaterialComponents.CardView.MyApp.Ripple">
        <item name="android:clickable">true</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:selectableItemBackgroundBorderless</item>
    </style>
</resources>
